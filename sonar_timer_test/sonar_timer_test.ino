#include "MultiTimer.h"
#include "Timer.h"



//------------------------------------------------------------------------
//  Properties
//------------------------------------------------------------------------
int led = 8;

//MultiTimer mtimer;
Timer mtimer;



//------------------------------------------------------------------------
//  Methods
//------------------------------------------------------------------------
void setup() {                
  Serial.begin(9600);

  pinMode(led, OUTPUT);     

  /*
   *  timer
   */
//  float interval[2] = { 2000, 500 };
  float interval = 500;
  mtimer.setFreq( interval );
}

//------------------------------------------------------------------------
void loop() {
  
  if( mtimer.getTrigger() ) {
    digitalWrite(led, HIGH);
  }
  else {
    digitalWrite(led, LOW);
  }

}
